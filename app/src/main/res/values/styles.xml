<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/white</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/jalapino_red</item>
    </style>


    <style name="AppTheme.OtpDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/white_rounded_rectangle</item>

    </style>
    <style name="Dialog.MainActviity" parent="AppTheme">
        <item name="colorAccent">@color/mandarin_red</item>
    </style>

    <style name="AppTheme.OrderListViewActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="AppTheme.ViewImageActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

</resources>
