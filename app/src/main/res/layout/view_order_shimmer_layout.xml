<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shimmer_layout"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/defult_item_layout_margin_double"
            android:layout_height="wrap_content">
            <View
                android:layout_width="@dimen/view_order_box_dim"
                android:layout_height="@dimen/view_order_box_dim"
                android:background="@color/dot"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/white"
                    android:background="@color/dot"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_home_black_24dp"
                    android:layout_marginBottom="@dimen/defult_item_layout_margin"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@color/dot"
                android:layout_marginStart="@dimen/defult_item_layout_margin_double"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:background="@color/dot"
                    android:layout_marginTop="@dimen/defult_item_layout_margin"
                    android:layout_marginStart="@dimen/defult_item_layout_margin_double"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:background="@color/dot"
                    android:layout_marginTop="@dimen/defult_item_layout_margin"
                    android:layout_marginStart="@dimen/defult_item_layout_margin_double"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defult_item_layout_margin_double"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:drawableTint="@color/white"
            android:background="@color/dot"
            android:layout_marginStart="@dimen/defult_item_layout_margin"
            android:drawablePadding="@dimen/defult_item_layout_margin_double"
            android:text="OID-65451446516"
            android:textColor="@color/dot"
            app:drawableStartCompat="@drawable/ic_radio_button_checked_black_24dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defult_item_layout_margin_double"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:drawableTint="@color/white"
            android:background="@color/dot"
            android:layout_marginTop="@dimen/defult_item_layout_margin"
            android:layout_marginStart="@dimen/defult_item_layout_margin"
            android:textColor="@color/dot"
            android:drawablePadding="@dimen/defult_item_layout_margin_double"
            android:text="+917014911292"
            app:drawableStartCompat="@drawable/ic_phone_black_24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defult_item_layout_margin"
            android:layout_marginStart="@dimen/defult_item_layout_margin"
            android:layout_marginEnd="@dimen/defult_item_layout_margin"
            android:padding="@dimen/defult_item_layout_margin_double"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:drawableTint="@color/white"
            android:drawablePadding="@dimen/defult_item_layout_margin_double"
            android:background="@color/dot"
            app:drawableStartCompat="@drawable/ic_location_on_black_24dp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defult_item_layout_margin_double"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:drawableTint="@color/white"
            android:background="@color/dot"
            android:layout_marginTop="@dimen/defult_item_layout_margin"
            android:layout_marginStart="@dimen/defult_item_layout_margin"
            android:textColor="@color/dot"
            android:drawablePadding="@dimen/defult_item_layout_margin_double"
            android:text="+917014911292"
            app:drawableStartCompat="@drawable/ic_directions_black_24dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/bottom"
        android:background="@color/dot"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:layout_marginEnd="@dimen/defult_item_layout_margin"
        />


    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/defult_item_layout_margin"
        android:layout_height="50dp"
        android:background="@color/dot"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
