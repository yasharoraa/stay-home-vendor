<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/profile_image"
        android:layout_height="@dimen/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double" />


    <TextView
        android:id="@+id/text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_marginTop="@dimen/defult_item_layout_margin"
        android:padding="@dimen/defult_item_layout_margin_double" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_above="@id/dev_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/defult_item_layout_margin"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contetx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double"
        android:text="Contact us at" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double"
        android:text="indstayhome@gmail.com"
        android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>



    <ImageView
        android:id="@+id/dev_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/dev_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_triangle" />

    <TextView
        android:id="@+id/dev_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/defult_item_layout_margin"
        android:layout_marginBottom="@dimen/defult_item_layout_margin_double"
        android:text="(Page Under Development)" />

</RelativeLayout>